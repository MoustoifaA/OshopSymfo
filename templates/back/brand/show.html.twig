{% extends 'base.html.twig' %}

{% block title %}Brand{% endblock %}

{% block body %}
<div class="container">
    <h1>{{ brand.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ brand.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ brand.name }}</td>
            </tr>
            <tr>
                <th>Created At</th>
                <td>{{ brand.createdAt ? brand.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Last update</th>
                <td>{{ brand.updatedAt ? brand.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class='btn btn-primary m-2' href="{{ path('app_back_brand_index') }}">back to brands list</a>

    <a title="edit" class='btn btn-info' href="{{ path('app_back_brand_edit', {'id': brand.id}) }}"><i class="fa-solid fa-pen-to-square fa-xl"></i></a>

    {{ include('back/brand/_delete_form.html.twig') }}
</div>
{% endblock %}
