{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}<{% endblock %}

{% block body %}
<div class="container">
    <h1>{{ product.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ product.picture }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ product.price }} â‚¬</td>
            </tr>
            <tr>
                <th>Rate</th>
                <td>{{ product.rate }} / 5</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>
                {% if product.status == 0 %}
                Unknown
                {% elseif product.status == 1  %}
                Available
                {% else %}
                Unavailable
                {% endif %}
                </td>
            </tr>
            <tr>
                <th>Created at</th>
                <td>{{ product.createdAt ? product.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Last update</th>
                <td>{{ product.updatedAt ? product.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a title="back to product list" class="btn btn-primary m-2" href="{{ path('app_back_product_browse') }}">back to product list</a>

    <a title="edit" class="btn btn-info"href="{{ path('app_back_product_edit', {'id': product.id}) }}"><i class="fa-solid fa-pen-to-square fa-xl"></i></a>

    {{ include('back/product/_delete_form.html.twig') }}
    </div>
{% endblock %}
