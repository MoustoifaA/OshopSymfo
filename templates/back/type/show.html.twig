{% extends 'base.html.twig' %}

{% block title %}{{type.name}}{% endblock %}

{% block body %}
<div class="container">
    <h1>{{type.name}}%</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ type.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ type.name }}</td>
            </tr>
            <tr>
                <th>Subtitle</th>
                <td>{{ type.subtitle }}</td>
            </tr>
            <tr>
                <th>Created at</th>
                <td>{{ type.createdAt ? type.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Last update</th>
                <td>{{ type.updatedAt ? type.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a   title="back to product list" class="btn btn-primary m-2" href="{{ path('app_back_type_index') }}">back to Types</a>

    <a title="edit" class="btn btn-info" href="{{ path('app_back_type_edit', {'id': type.id}) }}"><i class="fa-solid fa-pen-to-square fa-xl"></i></a>

    {{ include('back/type/_delete_form.html.twig') }}
</div>
{% endblock %}