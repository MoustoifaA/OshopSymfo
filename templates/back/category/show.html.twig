{% extends 'base.html.twig' %}

{% block title %}Categories{% endblock %}

{% block body %}
<div class="container">
    <h1>{{ category.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ category.name }}</td>
            </tr>
            <tr>
                <th>Subtitle</th>
                <td>{{ category.subtitle }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ category.picture }}</td>
            </tr>
            <tr>
                <th>Home order</th>
                <td>{{ category.homeOrder }}/5</td>
            </tr>
            <tr>
                <th>Created at</th>
                <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Last update</th>
                <td>{{ category.updatedAt ? category.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class='btn btn-primary m-2' href="{{ path('app_back_category_browse') }}">back to categories list</a>

    <a title="edit" class='btn btn-info' href="{{ path('app_back_category_edit', {'id': category.id}) }}"><i class="fa-solid fa-pen-to-square fa-xl"></i></a>

    {{ include('back/category/_delete_form.html.twig') }}
</div>
{% endblock %}
